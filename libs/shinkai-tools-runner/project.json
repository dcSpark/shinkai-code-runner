{
  "name": "@shinkai_protocol/shinkai-tools-runner",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shinkai-tools-runner/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "dependsOn": [
        { "projects": ["tag:tool"], "target": "build" }
      ],
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "cwd": "libs/shinkai-tools-runner",
        "commands": [
          "npx copyfiles --up 2 --verbose dist/apps/shinkai-tool-*/definition.json libs/shinkai-tools-runner/tools",
          "npx copyfiles --up 3 --verbose dist/apps/shinkai-tools-backend/shinkai-tools-backend* libs/shinkai-tools-runner/shinka-tools-runner-resources/",
          "cargo build"
        ]
      },
      "configurations": {
        "development": {},
        "production": {
          "args": ["--release"]
        }
      }
    },
    "test": {
      "dependsOn": [
        { "projects": ["tag:tool"], "target": "build" }
      ],
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "development",
      "options": {
        "cwd": "libs/shinkai-tools-runner",
        "command": "cargo test --features=built-in-tools"
      },
      "configurations": {
        "development": {},
        "production": {
          "args": ["--release"]
        }
      }
    },
    "lint": {
      "dependsOn": [
        { "projects": ["tag:tool"], "target": "build" }
      ],
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "cwd": "libs/shinkai-tools-runner",
        "command": "cargo clippy"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "publish": {
      "dependsOn": [
        { "projects": ["tag:tool"], "target": "build" }
      ],
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "command": "cargo publish -p shinkai_tools_runner --allow-dirty"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    }
  }
}
